<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="350dp"
    android:background="@drawable/bg_task_item"
    android:padding="20dp"
    android:orientation="vertical" >

    <ImageView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:id="@+id/close_icon"
        android:layout_gravity="right"
        android:src="@drawable/ic_baseline_close_24"
        android:background="@android:color/transparent">
    </ImageView>

    <ScrollView
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:layout_weight="1"
        android:layout_marginBottom="20dp" >

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical">

            <TextView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:id="@+id/taskName"
                android:text="Task Name"
                android:textColor="@color/peach"
                android:textSize="25sp"
                android:layout_marginBottom="20dp" >
            </TextView>

            <TextView
                android:id='@+id/taskDeadline'
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="Task Deadline"
                android:drawablePadding="20dp"
                android:textSize="20sp"
                android:layout_marginBottom="20dp"
                app:drawableStartCompat="@drawable/ic_baseline_access_time_24"
                app:drawableTint="@color/peach" />

            <TextView
                android:id='@+id/taskDesc'
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="Task Description"
                android:drawablePadding="20dp"
                android:textSize="20sp"
                app:drawableTint="@color/peach"
                app:drawableStartCompat="@drawable/ic_baseline_assignment_24" />
        </LinearLayout>
    </ScrollView>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        android:gravity="center" >

        <Button
            android:layout_width="122dp"
            android:layout_height="wrap_content"
            android:id="@+id/edit_button"
            android:text="Edit"
            android:backgroundTint="@color/peach"
            android:layout_marginEnd="5dp"
            android:drawableLeft="@drawable/ic_baseline_edit_24" />

        <Button
            android:layout_width="122dp"
            android:layout_height="wrap_content"
            android:id="@+id/delete_button"
            android:text="Delete"
            android:textColor="@color/peach"
            android:layout_marginStart="5dp"
            android:backgroundTint="@color/off_white"
            android:drawableLeft="@drawable/ic_baseline_delete_outline_24"
            android:drawableTint="@color/peach" />

    </LinearLayout>
</LinearLayout>