<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    tools:context=".bottomNav.pet.OnlineActivity" >

    <androidx.viewpager.widget.ViewPager
        android:id="@+id/online_viewpager"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:background="?attr/colorSecondary"/>

    <com.google.android.material.floatingactionbutton.FloatingActionButton
        android:id="@+id/online_prev_button"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_centerVertical="true"
        android:layout_alignParentStart="true"
        android:clickable="true"
        android:src="@drawable/ic_baseline_arrow_back_24"
        app:backgroundTint="@color/white"
        app:borderWidth="0dp"
        android:layout_marginStart="10dp"
        android:focusable="true" />

    <com.google.android.material.floatingactionbutton.FloatingActionButton
        android:id="@+id/online_next_button"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_centerVertical="true"
        android:layout_alignParentEnd="true"
        android:clickable="true"
        android:src="@drawable/ic_baseline_arrow_forward_24"
        app:backgroundTint="@color/white"
        app:borderWidth="0dp"
        android:layout_marginEnd="10dp"
        android:focusable="true" />

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        android:padding="7dp"
        android:layout_alignParentBottom="true">

        <Button
            android:id="@+id/online_done"
            style="@style/ButtonDarkStyle"
            android:layout_width="0dp"
            android:layout_weight="1"
            android:layout_height="wrap_content"
            android:layout_marginHorizontal="5dp"
            android:text="@string/done" />

        <Button
            android:id="@+id/online_cancel"
            style="@style/ButtonLightStyle"
            app:backgroundTint="@color/white"
            android:layout_width="0dp"
            android:layout_weight="1"
            android:layout_height="wrap_content"
            android:layout_marginHorizontal="5dp"
            android:text="@string/cancel"
            android:textColor="?attr/colorPrimary" />
    </LinearLayout>

</RelativeLayout>