<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".bottomNav.pet.RoomActivity"
    android:orientation="vertical">

    <androidx.viewpager.widget.ViewPager
        android:id="@+id/room_viewpager"
        android:layout_width="match_parent"
        android:layout_height="match_parent"/>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="horizontal" >

        <ImageButton
            android:id="@+id/room_prev_button"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="center|start"
            android:src="@drawable/ic_baseline_arrow_back_24"
            android:backgroundTint="@android:color/transparent"/>

        <RelativeLayout
            android:layout_width="0dp"
            android:layout_weight="1"
            android:layout_height="match_parent">

            <TextView
                android:id="@+id/room_name_text"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:background="@drawable/bg_task_item"
                android:layout_gravity="top|center"
                android:layout_marginVertical="20dp"
                android:padding="10dp"
                android:text="Wallpaper"
                android:textAlignment="center"
                android:textColor="?attr/colorPrimary"
                android:textSize="25sp"/>

            <RelativeLayout
                android:id="@+id/room_pet_area"
                android:layout_width="match_parent"
                android:layout_height="400dp"
                android:layout_marginBottom="70dp"
                android:layout_alignParentBottom="true"/>

        </RelativeLayout>



        <ImageButton
            android:id="@+id/room_next_button"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="center|end"
            android:src="@drawable/ic_baseline_arrow_forward_24"
            android:backgroundTint="@android:color/transparent"/>

    </LinearLayout>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        android:padding="7dp"
        android:layout_alignParentBottom="true">

        <Button
            android:id="@+id/room_done"
            android:layout_width="0dp"
            android:layout_weight="1"
            android:layout_height="wrap_content"
            android:layout_marginHorizontal="5dp"
            android:text="Done!"
            android:textSize="20sp"/>

        <Button
            android:id="@+id/room_cancel"
            android:backgroundTint="@color/light_pink"
            android:layout_width="0dp"
            android:layout_weight="1"
            android:layout_height="wrap_content"
            android:layout_marginHorizontal="5dp"
            android:text="cancel"
            android:textColor="?attr/colorPrimary"
            android:textSize="20sp"/>
    </LinearLayout>

</RelativeLayout>