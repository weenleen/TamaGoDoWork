<?xml version="1.0" encoding="utf-8"?>
<!-- Layout for each item in the Recycler View -->
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="120dp"
    android:paddingLeft="20dp"
    android:paddingRight="20dp"
    android:paddingTop="10dp"
    android:paddingBottom="10dp"
    android:background="@drawable/bg_task_item"
    android:layout_marginBottom="20dp"
    android:orientation="horizontal" >

    <!-- Details -->
    <LinearLayout
        android:layout_width="0dp"
        android:layout_weight="1"
        android:layout_height="wrap_content"
        android:orientation="vertical" >

        <!-- Name. -->
        <TextView
            android:id="@+id/taskName"
            android:layout_width="fill_parent"
            android:layout_height="wrap_content"
            android:textColor="@color/peach"
            android:text="Title testing"
            android:textSize="25sp"
            android:maxLines="1"
            android:ellipsize="end" >
        </TextView>

        <!-- Deadline. -->
        <TextView
            android:id="@+id/taskDeadline"
            android:layout_width="fill_parent"
            android:layout_height="wrap_content"
            android:text="3 days"
            android:textSize="20sp"
            android:drawableLeft="@drawable/ic_baseline_access_time_24"
            android:drawablePadding="10dp"
            android:drawableTint="@color/peach"
            android:maxLines="1"
            android:ellipsize="end" >
        </TextView>

        <!-- Desc. -->
        <TextView
            android:id="@+id/taskDesc"
            android:layout_width="fill_parent"
            android:layout_height="wrap_content"
            android:text="Description testing."
            android:textSize="20sp"
            android:drawableLeft="@drawable/ic_baseline_assignment_24"
            android:drawablePadding="10dp"
            android:drawableTint="@color/peach"
            android:maxLines="1"
            android:ellipsize="end" >
        </TextView>
    </LinearLayout>

    <CheckBox
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_gravity="center"
        android:id="@+id/taskCheckBox" >
    </CheckBox>
</LinearLayout>