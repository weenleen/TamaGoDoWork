<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/off_white"
    android:paddingHorizontal="20dp"
    android:paddingVertical="40dp" >

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:id="@+id/edit_container"
        android:background="@drawable/bg_task_item"
        android:padding="20dp"
        android:orientation="vertical">

        <TextView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="Edit"
            android:textSize="30sp"
            android:textColor="?attr/colorPrimary"
            android:gravity="center" >
        </TextView>

        <ScrollView
            android:layout_width="match_parent"
            android:layout_height="0dp"
            android:layout_weight="1"
            android:layout_marginVertical="20dp">

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="vertical" >

                <EditText
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:hint="Name"
                    android:textSize="20sp"
                    android:id="@+id/editName"
                    android:maxLines="3"
                    android:layout_marginBottom="40dp"
                    android:inputType="text">
                </EditText>

                <EditText
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:drawableStart="@drawable/ic_baseline_access_time_24"
                    android:drawableTint="@color/peach"
                    android:id="@+id/editDeadline"
                    android:drawablePadding="20dp"
                    android:hint="Deadline"
                    android:textSize="15sp"
                    android:editable="false"
                    android:focusable="false"
                    android:cursorVisible="false"
                    android:layout_marginBottom="20dp"
                    android:inputType="text">
                </EditText>

                <!-- Reminders title -->
                <TextView
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:text="Reminders"
                    android:textSize="18sp"
                    android:textColor="@color/peach">
                </TextView>

                <!-- Reminders checkboxes -->
                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:id="@+id/reminders"
                    android:orientation="vertical"
                    android:layout_marginBottom="20dp">

                    <CheckBox
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:id="@+id/ctv_1_h"
                        android:text="1 hour before"
                        android:gravity="center_vertical" >
                    </CheckBox>

                    <CheckBox
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:id="@+id/ctv_1_d"
                        android:text="1 day before"
                        android:gravity="center_vertical" >
                    </CheckBox>

                    <CheckBox
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:id="@+id/ctv_2_d"
                        android:text="2 days before"
                        android:gravity="center_vertical" >
                    </CheckBox>
                </LinearLayout>

                <EditText
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:drawableStart="@drawable/ic_baseline_assignment_24"
                    android:drawableTint="@color/peach"
                    android:drawablePadding="20dp"
                    android:hint="Description"
                    android:textSize="15sp"
                    android:id="@+id/editDesc"
                    android:maxLines="8"
                    android:inputType="text">
                </EditText>
            </LinearLayout>
        </ScrollView>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical"
            android:gravity="bottom">

            <Button
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:id="@+id/save_button"
                android:text="Save Changes"
                android:backgroundTint="@color/peach">
            </Button>

            <Button
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:id="@+id/cancel_edit_button"
                android:text="Cancel"
                android:textColor="@color/peach"
                android:backgroundTint="@color/off_white">
            </Button>
        </LinearLayout>
    </LinearLayout>
</RelativeLayout>