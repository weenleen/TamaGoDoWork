<resources xmlns:tools="http://schemas.android.com/tools">
    <!-- Base application theme. -->
    <style name="Theme.TamaGoDoWork" parent="Theme.MaterialComponents.DayNight.NoActionBar">
        <!-- fonts and others -->
        <item name="android:fontFamily">@font/quicksand_regular</item>
        <item name="fontFamily">@font/quicksand_regular</item>
        <item name="colorAccent">@color/peach</item>
        <item name="android:colorAccent">@color/peach</item>

        <!-- Primary brand color. -->
        <item name="colorPrimary">@color/peach</item>
        <item name="colorOnPrimary">@android:color/white</item>

        <item name="colorPrimaryVariant">@color/off_white</item>

        <!-- Secondary brand color. -->
        <item name="colorSecondary">@color/off_white</item>
        <item name="colorOnSecondary">@color/peach</item>

        <!-- Status bar color. -->
        <item name="android:statusBarColor" tools:targetApi="l">?attr/colorPrimary</item>

        <!-- Customize your theme here. -->
        <item name="android:buttonStyle">@style/ButtonDarkStyle</item>
        <item name="android:datePickerStyle">@style/MyDatePickerStyle</item>
        <item name="android:timePickerStyle">@style/MyTimePickerStyle</item>
        <item name="bottomSheetDialogTheme">@style/AppBottomSheetDialogTheme</item>
    </style>

    <!-- Button Styles. -->
    <style name="ButtonDarkStyle" parent="android:Widget.Holo.Button">
        <item name="colorButtonNormal">?attr/colorPrimary</item>
        <item name="android:textColor">?attr/colorOnPrimary</item>
    </style>

    <style name="ButtonLightStyle" parent="android:Widget.Holo.Button">
        <item name="colorButtonNormal">?attr/colorSecondary</item>
        <item name="android:textColor">?attr/colorOnSecondary</item>
    </style>

    <!-- DatePickerStyle Theme. -->
    <style name="MyDatePickerStyle" parent="android:Widget.Material.Light.DatePicker">
        <item name="android:headerBackground">?attr/colorPrimary</item>
        <item name="android:colorAccent">?attr/colorPrimary</item>
    </style>

    <!-- TimePickerStyle Theme. -->
    <style name="MyTimePickerStyle" parent="android:Widget.Material.Light.TimePicker">
        <item name="android:colorAccent">@color/peach</item>
        <item name="android:textColor">@color/peach</item>
    </style>


    <!-- Bottom Sheet dialog Theme. -->
    <style name="AppBottomSheetDialogTheme"
        parent="Theme.Design.Light.BottomSheetDialog">
        <item name="bottomSheetStyle">@style/AppModalStyle</item>
    </style>

    <style name="AppModalStyle"
        parent="Widget.Design.BottomSheet.Modal">
        <item name="android:background">@drawable/bg_dial_rounded</item>
    </style>
</resources>