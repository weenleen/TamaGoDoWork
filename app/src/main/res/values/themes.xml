<resources xmlns:tools="http://schemas.android.com/tools">
    <!-- Base application theme. -->
    <style name="Theme.TamaGoDoWork" parent="Theme.MaterialComponents.DayNight.NoActionBar">
        <!-- fonts and others -->
        <item name="android:fontFamily">@font/quicksand_regular</item>
        <item name="fontFamily">@font/quicksand_regular</item>
        <item name="colorAccent">@color/peach</item>
        <item name="android:colorAccent">@color/peach</item>

        <!-- Primary brand color. -->
        <item name="colorPrimary">@color/peach</item>
        <item name="colorOnPrimary">@android:color/white</item>

        <item name="colorPrimaryVariant">@color/off_white</item>

        <!-- Secondary brand color. -->
        <item name="colorSecondary">@color/off_white</item>
        <item name="colorOnSecondary">@color/peach</item>

        <!-- Status bar color. -->
        <item name="android:statusBarColor" tools:targetApi="l">?attr/colorPrimary</item>

        <!-- Customize your theme here. -->
        <item name="android:timePickerStyle">@style/MyTimePickerStyle</item>
        <item name="bottomSheetDialogTheme">@style/AppBottomSheetDialogTheme</item>
        <item name="alertDialogTheme">@style/AlertDialogStyle</item>
    </style>

    <!-- Button Styles. -->
    <style name="ButtonDarkStyle" parent="Widget.AppCompat.Button">
        <item name="android:textColor">@color/white</item>
        <item name="android:background">@drawable/bg_date_highlight</item>
        <item name="android:layout_margin">5dp</item>
    </style>

    <style name="ButtonLightStyle" parent="Widget.AppCompat.Button">
        <item name="android:textColor">@color/peach</item>
        <item name="android:background">@drawable/bg_rounded_shape_white</item>
        <item name="android:layout_margin">5dp</item>
    </style>

    <!-- TimePickerStyle Theme. -->
    <style name="MyTimePickerStyle" parent="android:Widget.Material.Light.TimePicker">
        <item name="android:colorAccent">@color/peach</item>
        <item name="android:textColor">@color/peach</item>
    </style>


    <!-- Bottom Sheet dialog Theme. -->
    <style name="AppBottomSheetDialogTheme" parent="Theme.Design.Light.BottomSheetDialog">
        <item name="bottomSheetStyle">@style/AppModalStyleBottomSheet</item>
    </style>

    <style name="AppModalStyleBottomSheet" parent="Widget.Design.BottomSheet.Modal">
        <item name="android:background">@drawable/bg_dial_rounded</item>
        <item name="behavior_peekHeight">@dimen/custom_peek_height</item>
    </style>

    <style name="AlertDialogStyle" parent="Theme.AppCompat.Light.Dialog.Alert">
        <item name="android:windowBackground">@drawable/bg_rounded_shape_white</item>
        <item name="android:textAlignment">center</item>
        <item name="paddingStart">20dp</item>
        <item name="paddingEnd">20dp</item>
    </style>
</resources>